{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "testdatafactoryben"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Prueba modelo @pipeline().parameters.modelo",
				"activities": [
					{
						"name": "Entrenamiento del modelo",
						"description": "",
						"type": "DatabricksNotebook",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Nombre_modelo",
								"value": "@pipeline().parameters.modelo"
							}
						],
						"typeProperties": {
							"notebookPath": {
								"value": "@concat(pipeline().parameters.path,pipeline().parameters.notebook)",
								"type": "Expression"
							},
							"baseParameters": {
								"modelo": "@pipeline().parameters.modelo"
							}
						},
						"linkedServiceName": {
							"referenceName": "AzureDatabricks1",
							"type": "LinkedServiceReference"
						}
					}
				],
				"parameters": {
					"path": {
						"type": "string",
						"defaultValue": "/Users/seele.soul.17_gmail.com#ext#@seelesoul17gmail.onmicrosoft.com/Notebooks/"
					},
					"notebook": {
						"type": "string",
						"defaultValue": "Ejemplo"
					},
					"modelo": {
						"type": "string",
						"defaultValue": "wine_model"
					},
					"cluster_id": {
						"type": "string",
						"defaultValue": "0923-184230-condo559"
					},
					"library": {
						"type": "string",
						"defaultValue": "dbfs:/FileStore/jars/d4e9fc9c_e3a7_45f9_a1a5_fee41431dd6d-nba_xsell_churn_0_0_16_py3_7-e856b.egg"
					}
				},
				"annotations": [
					"@pipeline().parameters.modelo"
				]
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/trigger1')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [
					"@pipeline().parameters.modelo"
				],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "pipeline1",
							"type": "PipelineReference"
						},
						"parameters": {
							"path": "/Users/seele.soul.17_gmail.com#ext#@seelesoul17gmail.onmicrosoft.com/Notebooks/",
							"notebook": "Ejemplo",
							"modelo": "XYZ",
							"cluster_id": "A",
							"library": "B"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Month",
						"interval": 15,
						"startTime": "2020-10-16T08:54:00.000Z",
						"timeZone": "UTC",
						"schedule": {
							"minutes": [
								57
							],
							"hours": [
								10
							],
							"monthDays": [
								16
							]
						}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/pipeline1')]"
			]
		}
	]
}